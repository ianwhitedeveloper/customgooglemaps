.results
	position relative
	width auto
	z-index 102
	padding 30px 10px
	text-align center
	background-color transparent

.striped_bar
	position absolute
	top 0
	left 0
	width 100%
	background #fff url('../imgs/colored-stripes.svg') no-repeat center center;
	background-size cover
	height 22px
	
	&:before,
	&:after 
		height 22px
		width 22px
		background #fff url('../imgs/star.svg') no-repeat center center;
		background-size cover
		position absolute	
		top 0
		content " "
	&:before
		left 0
	&:after
		right 0
	
header
	position relative
	width 100%
	
	h1, p
		width 100%
	
	p
		display none
		

@media only screen and (min-width: 768px)
	.results
		position absolute
		top 0
		left 0;	
		width 350px
		height calc(100vh - 150px)
		padding 30px 10px

	header
		display inline-block
		
		p
			display block
		