@import '../functions/flex'

.results
	position relative
	width auto
	z-index 102
	padding 30px 10px
	text-align center
	background-color transparent

.cup_results
	display(flex)
	width 265px
	margin 0 auto
	margin-top 12px

.cup_results_container
	display(flex)
	flex-align-items(center)
	flex-justify-content(space-between)
	height 90px
	width 33.3333%;
	margin auto
	position relative
	
	.percentage
		flex(1)
	
	
	.cup
		display(flex)
		position relative
		top -12px
		background-image url('../imgs/coffee_colors_votes.png');
		background-repeat no-repeat
		background-size cover
		height 90px
		width 45px
	
	.red
		&:before
			background-position 0 0
	

.striped_bar
	position absolute
	top 0
	left 0
	width 100%
	background #fff url('../imgs/colored-stripes.svg') no-repeat center center;
	background-size cover
	height 22px
	
	&:before,
	&:after 
		height 22px
		width 22px
		background #fff url('../imgs/star.svg') no-repeat center center;
		background-size cover
		position absolute	
		top 0
		content " "
	&:before
		left 0
	&:after
		right 0
	
header
	position relative
	width 100%
	
	h1, p
		width 100%
	
	p
		display none20	

@media only screen and (min-width: 1024px)
	.results
		position absolute
		top 0
		left 0;	
		width 420px
		height calc(100vh - 150px)
		padding 30px 10px

	header
		display inline-block
		
		p
			display block
		