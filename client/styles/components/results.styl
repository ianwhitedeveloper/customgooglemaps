.results
	position relative
	width auto
	z-index 102
	padding 30px 10px
	text-align center
	background-color transparent

.striped_bar
	
	
header
	position relative
	width 100%
	
	h1, p
		width 100%
	
	p
		display none
		

@media only screen and (min-width: 768px)
	.results
		position absolute
		top 0
		left 0;	
		width 350px
		height 100vh
		padding 30px 10px

	header
		display inline-block
		
		p
			display block
		