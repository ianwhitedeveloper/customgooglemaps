@import '../functions/flex'

.results
	position relative
	width auto
	z-index 102
	padding 35px 25px 0
	background-color transparent

	h4, p
		margin 7px 0
	
	header
		position relative
		width 210px
		margin 0 auto
		
		h1, p
			width 100%
		
		h1, h2
			text-transform uppercase
			

		h1
			color sevenPurple
			border-bottom 4px double sevenPurple
			position relative
			
			&:before
				content "ONLY AT"
				font-size 7px
				width 31px
				position absolute
				top 0
				right -3px

			&:after
				content " "
				background-image url('../imgs/seven_el_logo.svg')
				width 26px
				height 26px
				background-size cover
				position absolute
				top calc(50% - 13px)
				right 0
				

		h2
			display(flex)
			flex-justify-content(space-between)

.banner
	background url('../imgs/ribbon_banner.svg') no-repeat center center
	color #fff
	height 40px
	width 280px
	background-size cover
	margin 10px auto
	font-size 16px
	line-height 2em

.cup_results
	display(flex)
	flex-justify-content(center)
	flex-direction(row)
	width 265px
	margin 0 auto
	margin-top 12px

.cup_results_container
	flex-align-items(center)
	flex-direction(column)
	width 75px
	margin 0 5px
	
	.cup
		flex(1 auto)
		position relative
		background-image url('../imgs/coffee_colors_votes.png');
		background-repeat no-repeat
		background-size cover
		height 150px
		width 100%

	.percentage
		color #fff
		font-weight bold
		text-align center
		
		.circle
			width 35px
			height 35px
			display inline-block
			border-radius 50%
			
			span
				line-height 2em
				
				sup
					font-size 9px

	&.red
		.cup
			background-position -152px 0
		.circle
			border 1px solid sevenRed
			background-color sevenRed
	&.purple
		.cup
			background-position -75px 0
		.circle
			border 1px solid sevenPurple
			background-color sevenPurple
	&.blue
		.cup
			background-position 0 0
		.circle
			border 1px solid sevenBlue
			background-color sevenBlue

.striped_bar
	position absolute
	top 0
	left 0
	width 100%
	background #fff url('../imgs/colored-stripes.svg') no-repeat center center;
	background-size cover
	height 22px
	
	&:before,
	&:after 
		height 22px
		width 22px
		background #fff url('../imgs/star.svg') no-repeat center center;
		background-size cover
		position absolute	
		top 0
		content " "
	&:before
		left 0
	&:after
		right 0



@media only screen and (min-width: 1024px)
	.banner
		width 365px
		height 55px
		margin 20px auto
		font-size 21px

	.results
		position absolute
		top 0
		left 0;	
		width 420px
		height calc(100vh - 150px)
		padding 30px 10px
		
		header
			width 74%
