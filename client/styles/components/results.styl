@import '../functions/flex'

.results
	position relative
	width auto
	z-index 102
	padding 30px 10px
	background-color transparent
	
	header
		position relative
		width 210px
		margin 0 auto
		
		h1, p
			width 100%
		
		h1, h2
			text-transform uppercase

		h1
			color sevenPurple
			border-bottom 4px double sevenPurple
			position relative
			
			&:before
				content "ONLY AT"
				font-size 7px
				width 31px
				position absolute
				top 0
				right -3px

			&:after
				content " "
				background-image url('../imgs/seven_el_logo.svg')
				width 26px
				height 26px
				background-size cover
				position absolute
				top calc(50% - 13px)
				right 0
				

		h2
			word-spacing -6px
			
.cup_results
	display(flex)
	width 265px
	margin 0 auto
	margin-top 12px

.cup_results_container
	display(flex)
	flex-align-items(center)
	flex-justify-content(space-between)
	height 90px
	width 33.3333%;
	margin auto
	position relative
	
	.percentage
		flex(1)
	
	
	.cup
		display(flex)
		position relative
		top -12px
		background-image url('../imgs/coffee_colors_votes.png');
		background-repeat no-repeat
		background-size cover
		height 90px
		width 45px
	
	.red
		&:before
			background-position 0 0
	

.striped_bar
	position absolute
	top 0
	left 0
	width 100%
	background #fff url('../imgs/colored-stripes.svg') no-repeat center center;
	background-size cover
	height 22px
	
	&:before,
	&:after 
		height 22px
		width 22px
		background #fff url('../imgs/star.svg') no-repeat center center;
		background-size cover
		position absolute	
		top 0
		content " "
	&:before
		left 0
	&:after
		right 0



@media only screen and (min-width: 1024px)
	.results
		position absolute
		top 0
		left 0;	
		width 420px
		height calc(100vh - 150px)
		padding 30px 10px
		
		header
			width 74%
			h2
				letter-spacing -0.5px
