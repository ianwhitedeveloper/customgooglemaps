.national_results
	font-size 11px
	margin-left: 10px;
	position: relative;

.banner_cta
	position relative
	bottom 33px
	
	a
		font-size 12px
		font-family AvenirNextBold

.location
	font-size 16px
	display inline-block

a[rel="js-share-results"]
	color sevenPurple
	cursor pointer

.results
	display(flex)
	flex-direction(column)
	position relative
	width auto
	z-index 102
	padding 35px 22px 0
	background-color transparent

	h4
		margin 12px 0
	p
		margin 5px 0

	.header_body_copy
		margin 5px auto
	
	header
		position relative
		width 75%
		max-width 205px
		margin 20px auto 0
		
		h1, p
			width 100%
		
		h1, h2
			text-transform uppercase
			

		h1
			color sevenPurple
			border-bottom 4px double sevenPurple
			position relative
			line-height 1em
			
			&:before
				line-height normal
				content "ONLY AT"
				font-size 7px
				width auto
				position absolute
				top -6px
				right 0

			&:after
				content " "
				background-image url('../imgs/seven_el_logo.svg')
				width 25px
				height 25px
				background-size cover
				position absolute
				top calc(50% - 13px)
				right 2px
				

		h2
			display(flex)
			flex-justify-content(space-between)

.banner
	position relative
	height auto
	max-height 85px
	max-width 355px
	font-size 16px
	line-height 42px
	margin 0 auto
	
	span
		height 55px

.location
	height 100%
	width 100%
	background-repeat no-repeat 
	background-position center center
	color #fff
	background-size cover
	margin 10px auto
	font-size 21px
	font-family AvenirNextBold
	

	&[data-winner="red"]
		background-image url('../imgs/ribbon_banner_red.svg')
	
	&[data-winner="blue"]
		background-image url('../imgs/ribbon_banner_blue.svg')
	
	&[data-winner="purple"]
		background-image url('../imgs/ribbon_banner_purple.svg')

.cup_results
		max-width 414px
		margin 0 auto

	.cup_results_container
		margin 0 5px
		
		.cup
			background-image url('../imgs/coffee_colors_votes.png');
			background-size: cover;
			height 115px
			width 60px
			margin 0 auto

		.percentage
			color #fff
			font-family AvenirNextBold
			font-weight bold
			text-align center
			font-size 16px
			
		.circle
			width 40px
			height 40px
			display inline-block
			border-radius 50%
			position relative
			
			span
				position relative
				top calc(50% - 10px)

			sup
				font-size 9px

		&.red
			.cup
				background-position 100% 0
			.circle
				border 1px solid sevenRed
				background-color sevenRed
		&.purple
			.cup
				background-position 50% 0
			.circle
				border 1px solid sevenPurple
				background-color sevenPurple
		&.blue
			.cup
				background-position 0 0
			.circle
				border 1px solid sevenBlue
				background-color sevenBlue

html[data-useragent*='evergreen']
	.cup_results
		display(flex)

	.cup_results_container
		flex(1)
		margin 0 5px

@media only screen and (min-width: 768px)
	.national_results
		font-size 14px
		margin-left 17px
		padding-left 5px;
		
	.header_cta .arrow_left
		&:before
			height 16px
	
	.results
		.header_body_copy
			font-size 17px
			
		header
			margin 35px auto 0
			max-width 304px
			
			h1
				&:before
					font-size 10px
					right -2px
					margin-top -4px
					
				&:after
					width 38px
					height 38px
					top calc(50% - 19px)

	.banner
		width 365px
		font-size 21px
	
	.banner_cta
		bottom 28px
		
		a
			font-size 15px
		
	html[data-useragent*='evergreen'] .cup_results_container .circle sup,
	.cup_results_container 
		.circle 
			span 
				position relative
				top calc(50% - 14px)
				
			sup
				font-size 11px

	.cup_results
		margin 5px auto 0
		

	html[data-useragent*='evergreen']
		.cup_results_container
			.cup
				height 160px
				width 80px

			.percentage
				font-size 22.5px
				
			.circle
				width 50px
				height 50px
		
@media only screen and (min-width: 1024px)
	.striped_bar
		width 420px

	.results
		position absolute
		top 0
		left 0;	
		width 420px
		padding 30px 10px
		
		header
			max-width 100%

@media only screen and (min-width: 1200px)
	.results
		header
