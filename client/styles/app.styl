/* inject:components */

/* endinject */
@import './functions/flex'
@import './functions/aspectRatio'
@import './components/variables.styl'
@import './components/inputs.styl'
@import './components/google-container.styl'
@import './components/google-map.styl'
@import './components/results.styl'
@import './components/search.styl'
@import './components/footer.styl'
@import './components/ad-space.styl'
@import 'node_modules/notie/dist/notie.css'
/* --------------------------------

Primary style

-------------------------------- */
html, body
  height auto

html
  *
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

body
	position relative
	font-family AvenirNextMed
	-webkit-font-smoothing antialiased
	font-size 13px
	color #5a5c5d
	margin 0
	background: repeating-linear-gradient(
		-45deg,
		#fff 6px,
		#fff 11px,
		rgba(240, 240, 241, 0.7) 0px,
		rgba(240, 240, 241, 0.7) 13px
	)

h1, h2, h3, h4, h5, h6, p
	margin 0
	padding 0

h1, h2, h3, h4, h5, h6
	font-family AvenirNextBold
	font-weight 100

p
	AvenirNextMed


h1
	font-size 31px
h2
	font-size 20px
h3
	font-size 16px
h4
	font-size 12px

a
	font-family AvenirNextDemi
	text-decoration none
	color sevenPurple

	&:visited, &:active, &:visited:active
		color sevenPurple


.arrow_left
	&:before
		content: ' ';
		background: url("../imgs/arrow_left.svg") center center no-repeat;
		width 12px
		height 100%
		position: absolute;
		left: -14px;
		top 0

.arrow_right
	&:after
		content ' '
		display inline-block
		width 0
		height 0
		border-top 3px solid transparent
		border-bottom 3px solid transparent
		border-left 3px solid sevenPurple
		margin 0 3px


.banner_cta
	font-family AvenirNextBold
	font-size 11px

#notie-confirm-yes,
#notie-confirm-no
	background repeating-linear-gradient(-45deg,#fff 6px,#fff 11px,rgba(240,240,241,1) 0,rgba(240,240,241,1) 13px)
	padding 5px 0
	height 100px

#notie-confirm-yes
	border-right 1px solid #ddd

#notie-confirm-no
	border-left 1px solid #ddd
#notie-confirm-inner
	background-color sevenBlue

#notie-alert-inner
	background-color sevenRed

.text_center
	text-align center

*, *:after, *:before
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

main
	width 100%
	height 100%

	&:after
		content " "
		display block
		height 150px

#mask
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color transparent
	z-index -1
	-webkit-transition: background 0.2s linear;
	-moz-transition: background 0.2s linear;
	-ms-transition: background 0.2s linear;
	-o-transition: background 0.2s linear;
	transition: background 0.2s linear;

	.fatal_error
		text-align center
		margin-top 50vh

.uppercase
	text-transform uppercase

.flex
	display(flex)
	*
		display(flex auto)
		flex-align-self(center)

.striped_bar
	position absolute
	top 0
	left 0
	width 100%
	background #fff url('../imgs/colored-stripes.svg') no-repeat center center;
	background-size cover
	height 22px

	&:before,
	&:after
		height 22px
		width 22px
		background #fff url('../imgs/star.svg') no-repeat center center;
		background-size cover
		position absolute
		top 0
		content " "
	&:before
		left 0
	&:after
		right 0

@media only screen and (min-height: 680px)
	html
		height auto
	body
		min-height 800px

@media only screen and (min-width: 768px)
	body
		font-size 14px

		h1
			font-size 46px
		h2
			font-size 30px
		h3
			font-size 21px
		h4
			font-size 15px

@media only screen and (min-width: 1024px)
	html, body
		height 100%
		min-height 800px
		

	.banner_cta
		font-size 15px

	.striped_bar
		width 420px

	.arrow_left
		&:before
			width: 15px;
			height: 15px;
			left: -16px;

	.arrow_right
		&:after
			border-top 5px solid transparent
			border-bottom 5px solid transparent
			border-left 5px solid sevenPurple
			margin 0 5px

@import './lte-ie10.styl'
